<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.AddAddressFragment"
    android:background="@android:color/transparent">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/round_corner_search">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/round_corner_search">

            <FrameLayout
                android:id="@+id/map_framelayout"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_marginHorizontal="10dp"
                android:layout_marginVertical="10dp"/>

            <LinearLayout
                android:id="@+id/countryLinear"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="@drawable/rounded_corners"
                android:layout_marginTop="15dp"
                android:layout_marginHorizontal="30dp"
                android:paddingVertical="5dp"
                android:paddingHorizontal="20dp"
                android:layout_below="@+id/map_framelayout"
                android:layout_alignParentStart="true">

                <EditText
                    android:id="@+id/country"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:backgroundTint="@color/light_blue"
                    android:hint="Country"
                    android:textSize="15sp"
                    android:maxLines="1"
                    android:scrollHorizontally="true"
                    android:inputType="text"/>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/cityLinear"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="@drawable/rounded_corners"
                android:layout_marginTop="10dp"
                android:layout_marginHorizontal="30dp"
                android:paddingVertical="5dp"
                android:paddingHorizontal="20dp"
                android:layout_below="@+id/countryLinear"
                android:layout_alignParentStart="true">


                <EditText
                    android:id="@+id/city"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:backgroundTint="@color/light_blue"
                    android:hint="@string/city"
                    android:textSize="15sp"
                    android:inputType="text"
                    android:maxLines="1"
                    android:scrollHorizontally="true"/>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/addressLinear"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="@drawable/rounded_corners"
                android:layout_marginTop="10dp"
                android:layout_marginHorizontal="30dp"
                android:paddingVertical="5dp"
                android:paddingHorizontal="20dp"
                android:layout_below="@+id/cityLinear">

                <EditText
                    android:id="@+id/address"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:backgroundTint="@color/light_blue"
                    android:hint="@string/address"
                    android:textSize="15sp"
                    android:inputType="text"
                    android:maxLines="1"
                    android:scrollHorizontally="true"/>

            </LinearLayout>


            <LinearLayout
                android:id="@+id/phoneLinear"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="@drawable/rounded_corners"
                android:layout_marginTop="10dp"
                android:layout_marginHorizontal="30dp"
                android:paddingVertical="5dp"
                android:paddingHorizontal="20dp"
                android:layout_below="@+id/addressLinear"
                android:layout_alignParentStart="true">

                <EditText
                    android:id="@+id/phone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:backgroundTint="@color/light_blue"
                    android:hint="@string/phone"
                    android:textSize="15sp"
                    android:inputType="phone"
                    android:maxLines="1"
                    android:scrollHorizontally="true"/>

            </LinearLayout>

            <Button
                android:id="@+id/registerBtn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/phoneLinear"
                android:layout_alignParentStart="true"
                android:layout_marginHorizontal="30dp"
                android:layout_marginVertical="30dp"
                android:background="@drawable/rounded_corners"
                android:fontFamily="@font/cairo_bold"
                android:text="@string/add_adress"
                app:backgroundTint="@color/main_color" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/no_access_location"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/round_corner_search">

            <ImageView
                android:id="@+id/no_access_location_image"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:src="@drawable/ic_location"
                android:layout_centerHorizontal="true"
                android:layout_alignParentTop="true"/>

            <TextView
                android:id="@+id/access_location_required_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/no_access_location_image"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="30dp"
                android:fontFamily="@font/cairo_black"
                android:text="@string/let_access_your_location"
                android:textSize="23sp" />

            <TextView
                android:id="@+id/text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/access_location_required_text"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="15dp"
                android:fontFamily="@font/cairo_regular"
                android:gravity="center_horizontal"
                android:text="@string/no_access_location_msg"
                android:textSize="16sp" />


            <Button
                android:id="@+id/login_btn"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_below="@+id/text"
                android:layout_alignParentStart="true"
                android:layout_marginHorizontal="30dp"
                android:layout_marginTop="60dp"
                android:layout_marginBottom="30dp"
                android:background="@drawable/rounded_rectangle"
                android:fontFamily="@font/cairo_semi_bold"
                android:text="Login"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textSize="15sp" />

        </RelativeLayout>
    </FrameLayout>

</ScrollView>