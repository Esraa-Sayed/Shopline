<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.AddAddressFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <FrameLayout
            android:id="@+id/map_framelayout"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_marginHorizontal="10dp"
            android:layout_marginVertical="10dp"/>

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/text1"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginTop="20dp"
            android:layout_marginHorizontal="20dp"
            app:cardCornerRadius="30dp"
            app:strokeWidth="2dp"
            app:strokeColor="@color/main_color_transparent"
            app:cardBackgroundColor="@color/light_gray"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/map_framelayout">
            <TextView
                android:id="@+id/country_text"
                android:hint="@string/country"
                android:paddingHorizontal="20dp"
                android:gravity="center_vertical"
                android:textColorHint="@color/gray"
                android:textSize="16sp"
                android:textColor="@color/black"
                android:fontFamily="@font/cairo_black"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"/>
        </com.google.android.material.card.MaterialCardView>

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/text2"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginTop="10dp"
            android:layout_marginHorizontal="20dp"
            app:cardCornerRadius="30dp"
            app:strokeWidth="3dp"
            app:strokeColor="@color/main_color_transparent"
            app:cardBackgroundColor="@color/light_gray"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/text1">
            <TextView
                android:id="@+id/city_text"
                android:hint="City"
                android:paddingHorizontal="20dp"
                android:gravity="center_vertical"
                android:textColorHint="@color/gray"
                android:textSize="16sp"
                android:textColor="@color/black"
                android:fontFamily="@font/cairo_black"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"/>
        </com.google.android.material.card.MaterialCardView>

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/text3"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginTop="10dp"
            android:layout_marginHorizontal="20dp"
            app:cardCornerRadius="30dp"
            app:strokeWidth="3dp"
            app:strokeColor="@color/main_color_transparent"
            app:cardBackgroundColor="@color/light_gray"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/text2">
            <TextView
                android:id="@+id/address_text"
                android:hint="Address"
                android:textColorHint="@color/gray"
                android:paddingHorizontal="20dp"
                android:gravity="center_vertical"
                android:textSize="16sp"
                android:textColor="@color/black"
                android:fontFamily="@font/cairo_black"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>
        </com.google.android.material.card.MaterialCardView>

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/text4"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginTop="20dp"
            android:layout_marginHorizontal="20dp"
            app:cardCornerRadius="30dp"
            app:strokeWidth="3dp"
            app:strokeColor="@color/main_color_transparent"
            app:cardBackgroundColor="@color/light_gray"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/text3">
            <TextView
                android:id="@+id/phone_text"
                android:hint="@string/phone"
                android:textColorHint="@color/gray"
                android:textSize="16sp"
                android:paddingHorizontal="20dp"
                android:gravity="center_vertical"
                android:textColor="@color/black"
                android:fontFamily="@font/cairo_black"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>
        </com.google.android.material.card.MaterialCardView>

        <Button
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:text="@string/confirm_add_address"
            android:textSize="18sp"
            android:textColor="@color/white"
            android:layout_marginBottom="8dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/rounded_rectangle"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/text4"/>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/no_access_location"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:visibility="gone">

        <ImageView
            android:id="@+id/no_access_location_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:src="@drawable/ic_location"
            android:layout_centerHorizontal="true"
            android:layout_alignParentTop="true"/>

        <TextView
            android:id="@+id/access_location_required_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/no_access_location_image"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="50dp"
            android:fontFamily="@font/cairo_black"
            android:text="@string/let_access_your_location"
            android:textSize="25sp" />

        <TextView
            android:id="@+id/text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/access_location_required_text"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="15dp"
            android:fontFamily="@font/cairo_semi_bold"
            android:gravity="center_horizontal"
            android:text="@string/no_access_location_msg"
            android:textSize="18sp" />


        <Button
            android:id="@+id/login_btn"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="Enable Location"
            android:textSize="18sp"
            android:fontFamily="@font/cairo_bold"
            android:textColor="@color/white"
            android:layout_margin="30dp"
            android:background="@drawable/rounded_rectangle"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/text"/>



    </RelativeLayout>

</FrameLayout>