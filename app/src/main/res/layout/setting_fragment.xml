<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.setting.view.SettingFragment"
    android:background="@color/light_gray">

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/setting_login"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        app:cardCornerRadius="30dp"
        app:cardElevation="10dp"
        android:visibility="gone">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/hello_card"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="10dp"
                app:cardElevation="4dp"
                android:layout_marginTop="15dp"
                android:layout_marginHorizontal="10dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:paddingVertical="10dp">
                    <TextView
                        android:id="@+id/hello_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Hello, Thoraya Hamdy"
                        android:layout_marginTop="10dp"
                        android:layout_marginHorizontal="20dp"
                        android:textSize="18sp"
                        android:fontFamily="@font/cairo_bold"/>

                    <ImageView
                        android:id="@+id/address_icon"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_below="@+id/hello_name"
                        android:layout_marginLeft="20dp"
                        android:layout_marginTop="5dp" />
                    <TextView
                        android:id="@+id/address_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Please choose your address"
                        android:layout_marginTop="5dp"
                        android:layout_marginHorizontal="20dp"
                        android:textSize="16sp"
                        android:fontFamily="@font/cairo_regular"
                        android:layout_toRightOf="@+id/address_icon"
                        android:layout_below="@+id/hello_name"/>
                </RelativeLayout>
            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardBackgroundColor="@color/main_color_transparent"
                android:layout_marginVertical="20dp"
                android:layout_marginHorizontal="10dp"
                app:cardCornerRadius="30dp"
                app:cardElevation="1dp"
                app:layout_constraintTop_toBottomOf="@+id/hello_card"
                app:layout_constraintStart_toStartOf="parent">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@android:color/transparent"
                    android:layout_marginVertical="10dp">

                    <com.google.android.material.card.MaterialCardView
                        android:id="@+id/address_card_view"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:cardCornerRadius="10dp"
                        app:cardElevation="4dp"
                        android:layout_marginVertical="10dp"
                        android:layout_marginHorizontal="10dp"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintStart_toStartOf="parent">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_margin="10dp">
                            <ImageView
                                android:id="@+id/address_image"
                                android:layout_width="45dp"
                                android:layout_height="45dp"
                                android:src="@drawable/ic_address"/>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Address"
                                android:layout_marginTop="10dp"
                                android:layout_marginHorizontal="20dp"
                                android:textSize="20sp"
                                android:fontFamily="@font/cairo_extra_bold"
                                android:layout_toRightOf="@+id/address_image"/>
                        </RelativeLayout>
                    </com.google.android.material.card.MaterialCardView>
                    <com.google.android.material.card.MaterialCardView
                        android:id="@+id/currency_card_view"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:cardCornerRadius="10dp"
                        app:cardElevation="4dp"
                        android:layout_marginVertical="10dp"
                        android:layout_marginHorizontal="10dp"
                        app:layout_constraintTop_toBottomOf="@+id/address_card_view"
                        app:layout_constraintStart_toStartOf="parent">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_margin="10dp">
                        <ImageView
                            android:id="@+id/currency_image"
                            android:layout_width="45dp"
                            android:layout_height="45dp"
                            android:src="@drawable/ic_currency"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Currency"
                            android:layout_marginTop="10dp"
                            android:layout_marginHorizontal="20dp"
                            android:textSize="20sp"
                            android:fontFamily="@font/cairo_extra_bold"
                            android:layout_toRightOf="@+id/currency_image"/>
                        </RelativeLayout>
                    </com.google.android.material.card.MaterialCardView>
                    <com.google.android.material.card.MaterialCardView
                        android:id="@+id/payment_card_view"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:cardCornerRadius="10dp"
                        app:cardElevation="4dp"
                        android:layout_marginVertical="10dp"
                        android:layout_marginHorizontal="10dp"
                        app:layout_constraintTop_toBottomOf="@+id/currency_card_view"
                        app:layout_constraintStart_toStartOf="parent">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_margin="10dp">
                            <ImageView
                                android:id="@+id/payment_image"
                                android:layout_width="45dp"
                                android:layout_height="45dp"
                                android:src="@drawable/ic_visa"/>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Payment Method"
                                android:layout_marginTop="10dp"
                                android:layout_marginHorizontal="20dp"
                                android:textSize="20sp"
                                android:fontFamily="@font/cairo_extra_bold"
                                android:layout_toRightOf="@+id/payment_image"/>
                        </RelativeLayout>
                    </com.google.android.material.card.MaterialCardView>
                    <com.google.android.material.card.MaterialCardView
                        android:id="@+id/contactus_card_view"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:cardCornerRadius="10dp"
                        app:cardElevation="4dp"
                        android:layout_marginVertical="10dp"
                        android:layout_marginHorizontal="10dp"
                        app:layout_constraintTop_toBottomOf="@+id/payment_card_view"
                        app:layout_constraintStart_toStartOf="parent">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_margin="10dp">
                            <ImageView
                                android:id="@+id/contactus_image"
                                android:layout_width="45dp"
                                android:layout_height="45dp"
                                android:src="@drawable/ic_contact_us"/>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Contact Us"
                                android:layout_marginTop="10dp"
                                android:layout_marginHorizontal="20dp"
                                android:textSize="20sp"
                                android:fontFamily="@font/cairo_extra_bold"
                                android:layout_toRightOf="@+id/contactus_image"/>
                        </RelativeLayout>
                    </com.google.android.material.card.MaterialCardView>
                    <com.google.android.material.card.MaterialCardView
                        android:id="@+id/aboutus_card_view"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:cardCornerRadius="10dp"
                        app:cardElevation="4dp"
                        android:layout_marginVertical="10dp"
                        android:layout_marginHorizontal="10dp"
                        app:layout_constraintTop_toBottomOf="@+id/contactus_card_view"
                        app:layout_constraintStart_toStartOf="parent">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_margin="10dp">
                            <ImageView
                                android:id="@+id/aboutus_image"
                                android:layout_width="45dp"
                                android:layout_height="45dp"
                                android:src="@drawable/ic_about"/>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="About Us"
                                android:layout_marginTop="10dp"
                                android:layout_marginHorizontal="20dp"
                                android:textSize="20sp"
                                android:fontFamily="@font/cairo_extra_bold"
                                android:layout_toRightOf="@+id/aboutus_image"/>
                        </RelativeLayout>
                    </com.google.android.material.card.MaterialCardView>

                </androidx.constraintlayout.widget.ConstraintLayout>
            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/logout_btn"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginBottom="20dp"
                android:layout_marginHorizontal="70dp"
                app:cardBackgroundColor="@color/main_color"
                app:cardCornerRadius="50dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintBottom_toBottomOf="parent">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Logout"
                    android:textSize="25sp"
                    android:textColor="@color/white"
                    android:fontFamily="@font/cairo_bold"
                    android:gravity="center"/>
            </com.google.android.material.card.MaterialCardView>
        </androidx.constraintlayout.widget.ConstraintLayout>

    </com.google.android.material.card.MaterialCardView>

    <RelativeLayout
        android:id="@+id/setting_no_login"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white">

        <ImageView
            android:id="@+id/no_login_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:src="@drawable/ic_img_auth_1"
            android:layout_centerHorizontal="true"
            android:layout_alignParentTop="true"/>

        <TextView
            android:id="@+id/login_required_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/no_login_image"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="50dp"
            android:fontFamily="@font/cairo_black"
            android:text="@string/login_required"
            android:textSize="30sp" />

        <TextView
            android:id="@+id/text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/login_required_text"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="15dp"
            android:fontFamily="@font/cairo_semi_bold"
            android:gravity="center_horizontal"
            android:text="@string/login_register_msg"
            android:textSize="18sp" />


        <Button
            android:id="@+id/login_btn"
            android:layout_width="160dp"
            android:layout_height="50dp"
            android:text="Login"
            android:textSize="18sp"
            android:fontFamily="@font/cairo_bold"
            android:textColor="@color/white"
            android:layout_margin="30dp"
            android:background="@drawable/rounded_rectangle"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/text"/>

        <Button
            android:id="@+id/register_btn"
            android:layout_width="160dp"
            android:layout_height="50dp"
            android:text="Register"
            android:textSize="18sp"
            android:fontFamily="@font/cairo_bold"
            android:textColor="@color/white"
            android:layout_margin="30dp"
            android:background="@drawable/rounded_rectangle"
            android:layout_alignParentEnd="true"
            android:layout_below="@+id/text"/>
    </RelativeLayout>
</FrameLayout>