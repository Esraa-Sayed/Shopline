<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.setting.view.SettingFragment"
    android:background="@drawable/rounded_corners_top_white">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/rounded_corners_top_white">
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/setting_login"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white"
            app:cardCornerRadius="30dp"
            app:cardElevation="10dp"
            android:visibility="gone">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/constraint"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <com.google.android.material.card.MaterialCardView
                        android:id="@+id/hello_card"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:cardCornerRadius="10dp"
                        app:cardElevation="4dp"
                        android:layout_marginTop="15dp"
                        android:layout_marginHorizontal="10dp"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintStart_toStartOf="parent">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:paddingVertical="10dp">

                            <TextView
                                android:id="@+id/hello_name"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginHorizontal="20dp"
                                android:layout_marginTop="10dp"
                                android:fontFamily="@font/cairo_semi_bold"
                                android:text="Hello, Thoraya Hamdy"
                                android:textSize="18sp" />

                            <ImageView
                                android:id="@+id/address_icon"
                                android:layout_width="23dp"
                                android:layout_height="23dp"
                                android:layout_below="@+id/hello_name"
                                android:layout_marginLeft="20dp"
                                android:layout_marginTop="5dp"
                                android:src="@drawable/ic_address" />

                            <TextView
                                android:id="@+id/address_name"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_below="@+id/hello_name"
                                android:layout_marginHorizontal="20dp"
                                android:layout_marginTop="5dp"
                                android:layout_toRightOf="@+id/address_icon"
                                android:fontFamily="@font/cairo_semi_bold"
                                android:text="Please choose your address"
                                android:textSize="16sp" />
                        </RelativeLayout>
                    </com.google.android.material.card.MaterialCardView>

                    <com.google.android.material.card.MaterialCardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:cardBackgroundColor="@color/main_color_transparent"
                        android:layout_marginVertical="20dp"
                        android:layout_marginHorizontal="10dp"
                        app:cardCornerRadius="30dp"
                        android:paddingBottom="10dp"
                        app:cardElevation="1dp"
                        app:layout_constraintTop_toBottomOf="@+id/hello_card"
                        app:layout_constraintStart_toStartOf="parent">

                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@android:color/transparent"
                            android:layout_marginVertical="10dp">

                            <com.google.android.material.card.MaterialCardView
                                android:id="@+id/address_card_view"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                app:cardCornerRadius="10dp"
                                app:cardElevation="4dp"
                                android:layout_marginVertical="10dp"
                                android:layout_marginHorizontal="10dp"
                                app:layout_constraintTop_toTopOf="parent"
                                app:layout_constraintStart_toStartOf="parent">

                                <RelativeLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_margin="10dp">

                                    <ImageView
                                        android:id="@+id/address_image"
                                        android:layout_width="23dp"
                                        android:layout_height="23dp"
                                        android:layout_centerVertical="true"
                                        android:layout_alignParentStart="true"
                                        android:layout_alignParentBottom="true"
                                        android:src="@drawable/ic_address" />

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_centerVertical="true"
                                        android:layout_marginHorizontal="20dp"
                                        android:layout_toRightOf="@+id/address_image"
                                        android:fontFamily="@font/cairo_semi_bold"
                                        android:text="Address"
                                        android:textSize="18sp" />
                                </RelativeLayout>
                            </com.google.android.material.card.MaterialCardView>
                            <com.google.android.material.card.MaterialCardView
                                android:id="@+id/currency_card_view"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                app:cardCornerRadius="10dp"
                                app:cardElevation="4dp"
                                android:layout_marginVertical="10dp"
                                android:layout_marginHorizontal="10dp"
                                app:layout_constraintTop_toBottomOf="@+id/address_card_view"
                                app:layout_constraintStart_toStartOf="parent">

                                <RelativeLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_margin="10dp">
                                    <ImageView
                                        android:id="@+id/currency_image"
                                        android:layout_width="23dp"
                                        android:layout_height="23dp"
                                        android:layout_centerVertical="true"
                                        android:src="@drawable/ic_currency"/>

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_centerVertical="true"
                                        android:layout_marginHorizontal="20dp"
                                        android:layout_toRightOf="@+id/currency_image"
                                        android:fontFamily="@font/cairo_semi_bold"
                                        android:text="Currency"
                                        android:textSize="18sp" />
                                </RelativeLayout>
                            </com.google.android.material.card.MaterialCardView>
                            <com.google.android.material.card.MaterialCardView
                                android:id="@+id/payment_card_view"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                app:cardCornerRadius="10dp"
                                app:cardElevation="4dp"
                                android:layout_marginVertical="10dp"
                                android:layout_marginHorizontal="10dp"
                                app:layout_constraintTop_toBottomOf="@+id/currency_card_view"
                                app:layout_constraintStart_toStartOf="parent">

                                <RelativeLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_margin="10dp">

                                    <ImageView
                                        android:id="@+id/payment_image"
                                        android:layout_width="23dp"
                                        android:layout_height="23dp"
                                        android:layout_centerVertical="true"
                                        android:src="@drawable/ic_visa" />

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_centerVertical="true"
                                        android:layout_marginHorizontal="20dp"
                                        android:layout_toRightOf="@+id/payment_image"
                                        android:fontFamily="@font/cairo_semi_bold"
                                        android:text="Payment Method"
                                        android:textSize="18sp" />
                                </RelativeLayout>
                            </com.google.android.material.card.MaterialCardView>
                            <com.google.android.material.card.MaterialCardView
                                android:id="@+id/contactus_card_view"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                app:cardCornerRadius="10dp"
                                app:cardElevation="4dp"
                                android:layout_marginVertical="10dp"
                                android:layout_marginHorizontal="10dp"
                                app:layout_constraintTop_toBottomOf="@+id/payment_card_view"
                                app:layout_constraintStart_toStartOf="parent">

                                <RelativeLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_margin="10dp">

                                    <ImageView
                                        android:id="@+id/contactus_image"
                                        android:layout_width="23dp"
                                        android:layout_height="23dp"
                                        android:layout_centerVertical="true"
                                        android:src="@drawable/ic_contact_us" />

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginHorizontal="20dp"
                                        android:layout_centerVertical="true"
                                        android:layout_toRightOf="@+id/contactus_image"
                                        android:fontFamily="@font/cairo_semi_bold"
                                        android:text="Contact Us"
                                        android:textSize="18sp" />
                                </RelativeLayout>
                            </com.google.android.material.card.MaterialCardView>
                            <com.google.android.material.card.MaterialCardView
                                android:id="@+id/aboutus_card_view"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                app:cardCornerRadius="10dp"
                                app:cardElevation="4dp"
                                android:layout_marginVertical="10dp"
                                android:layout_marginHorizontal="10dp"
                                app:layout_constraintTop_toBottomOf="@+id/contactus_card_view"
                                app:layout_constraintStart_toStartOf="parent">

                                <RelativeLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_margin="10dp">

                                    <ImageView
                                        android:id="@+id/aboutus_image"
                                        android:layout_width="23dp"
                                        android:layout_height="23dp"
                                        android:layout_centerVertical="true"
                                        android:src="@drawable/ic_about" />
                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="About Us"
                                        android:layout_centerVertical="true"
                                        android:layout_marginHorizontal="20dp"
                                        android:textSize="18sp"
                                        android:fontFamily="@font/cairo_semi_bold"
                                        android:layout_toRightOf="@+id/aboutus_image"/>
                                </RelativeLayout>
                            </com.google.android.material.card.MaterialCardView>

                        </androidx.constraintlayout.widget.ConstraintLayout>
                    </com.google.android.material.card.MaterialCardView>


                </androidx.constraintlayout.widget.ConstraintLayout>

                <Button
                    android:id="@+id/registerBtn"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/constraint"
                    android:layout_alignParentStart="true"
                    android:layout_marginHorizontal="30dp"
                    android:layout_marginVertical="30dp"
                    android:background="@drawable/rounded_corners"
                    android:fontFamily="@font/cairo_bold"
                    android:text="@string/add_adress"
                    app:backgroundTint="@color/main_color" />
            </RelativeLayout>

        </com.google.android.material.card.MaterialCardView>

        <RelativeLayout
            android:background="@drawable/rounded_corners_top_white"
            android:id="@+id/setting_no_login"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/no_login_image"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="30dp"
                android:src="@drawable/ic_img_auth_1" />

            <TextView
                android:id="@+id/login_required_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/no_login_image"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="50dp"
                android:fontFamily="@font/cairo_black"
                android:text="@string/login_required"
                android:textSize="23sp" />

            <TextView
                android:id="@+id/text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/login_required_text"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="15dp"
                android:fontFamily="@font/cairo_semi_bold"
                android:gravity="center_horizontal"
                android:text="@string/login_register_msg"
                android:textSize="14sp" />


            <Button
                android:id="@+id/login_btn"
                android:layout_width="160dp"
                android:layout_height="40dp"
                android:layout_below="@+id/text"
                android:layout_alignParentStart="true"
                android:layout_marginStart="20dp"
                android:layout_marginTop="60dp"
                android:layout_marginEnd="30dp"
                android:layout_marginBottom="30dp"
                android:background="@drawable/rounded_rectangle"
                android:fontFamily="@font/cairo_semi_bold"
                android:text="Login"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textSize="15sp" />

            <Button
                android:id="@+id/register_btn"
                android:layout_width="160dp"
                android:layout_height="40dp"
                android:layout_below="@+id/text"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="60dp"
                android:layout_marginEnd="30dp"
                android:layout_marginBottom="30dp"
                android:background="@drawable/rounded_rectangle"
                android:fontFamily="@font/cairo_semi_bold"
                android:text="Register"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textSize="15sp" />
        </RelativeLayout>
    </FrameLayout>
</ScrollView>