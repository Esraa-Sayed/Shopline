<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="130dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/sc_row_cardview"
    android:backgroundTint="@color/white"
    app:cardCornerRadius="10dp"
    app:cardElevation="8dp"
    android:layout_marginTop="10dp"
    android:layout_marginHorizontal="10dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/sc_row_item_image"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:scaleType="fitXY"
            android:src="@mipmap/ic_launcher"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

        <TextView
            android:id="@+id/sc_row_item_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tag Heuer wriskwer"
            android:layout_marginTop="10dp"
            android:layout_marginStart="20dp"
            android:textSize="20sp"
            android:textColor="@color/dark_gray"
            android:fontFamily="@font/cairo_semi_bold"
            app:layout_constraintStart_toEndOf="@+id/sc_row_item_image"
            app:layout_constraintTop_toTopOf="@+id/sc_row_item_image"/>

        <TextView
            android:id="@+id/sc_row_item_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="$1100"
            android:layout_marginTop="8dp"
            android:layout_marginStart="20dp"
            android:textSize="20sp"
            android:textColor="@color/secondary_color"
            android:fontFamily="@font/cairo_semi_bold"
            app:layout_constraintStart_toEndOf="@+id/sc_row_item_image"
            app:layout_constraintTop_toBottomOf="@+id/sc_row_item_name"/>

        <ImageButton
            android:id="@+id/sc_row_delete_btn"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_marginEnd="5dp"
            android:layout_marginTop="1dp"
            android:background="@android:color/transparent"
            android:src="@drawable/ic_delete_from_cart"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:ignore="SpeakableTextPresentCheck" />

        <com.google.android.material.card.MaterialCardView
            android:layout_width="150dp"
            android:layout_height="40dp"
            android:layout_marginEnd="20dp"
            android:layout_marginBottom="10dp"
            android:backgroundTint="@color/light_gray"
            app:cardCornerRadius="10dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:weightSum="3">

                <!--                <Button-->
                <!--                    android:layout_width="0dp"-->
                <!--                    android:layout_height="match_parent"-->
                <!--                    android:layout_weight="1"-->
                <!--                    style="@android:style/Animation"-->
                <!--                    android:text="-"-->
                <!--                    android:textSize="20sp"-->
                <!--                    android:textColor="@color/dark_gray"-->
                <!--                    android:gravity="center"-->
                <!--                    android:fontFamily="@font/cairo_extra_bold"-->
                <!--                    android:background="@android:color/transparent"/>-->

                <TextView
                    android:id="@+id/sc_row_plus_item"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="@string/plus"
                    android:textSize="25sp"
                    android:fontFamily="@font/cairo_extra_bold"/>

                <TextView
                    android:id="@+id/sc_row_item_count"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="3"
                    android:textSize="20sp"
                    android:fontFamily="@font/cairo_semi_bold"/>
                <TextView
                    android:id="@+id/sc_row_minus_item"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="@string/minus"
                    android:textSize="25sp"
                    android:fontFamily="@font/cairo_extra_bold"/>
            </androidx.appcompat.widget.LinearLayoutCompat>

        </com.google.android.material.card.MaterialCardView>

    </androidx.constraintlayout.widget.ConstraintLayout>


</com.google.android.material.card.MaterialCardView>