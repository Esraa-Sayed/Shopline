<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation2"
    app:startDestination="@+id/navigation_home">

    <fragment
        android:id="@+id/navigation_home"
        android:name="com.eCommerce.shopify.ui.home.view.HomeFragment"
        android:label="@string/title_home"
        tools:layout="@layout/fragment_home" />

    <fragment
        android:id="@+id/navigation_categories"
        android:name="com.eCommerce.shopify.ui.category.CategoryFragment"
        android:label="@string/title_category"
        tools:layout="@layout/fragment_category" />

    <fragment
        android:id="@+id/navigation_profile"
        android:name="com.eCommerce.shopify.ui.profile.view.ProfileFragment"
        android:label="fragment_profile"
        tools:layout="@layout/profile_fragment" />
    <fragment
        android:id="@+id/navigation_setting"
        android:name="com.eCommerce.shopify.ui.setting.view.SettingFragment"
        android:label="setting_fragment"
        tools:layout="@layout/setting_fragment" />
</navigation>